<div class="row">
    <!-- ===================================================== -->
  <% products.forEach((product) => {%>
      <div class="col l4 s12 m4 index-column">
          <div class="card z-depth-2 hoverable">
            <div class="card-image waves-effect waves-block waves-light">
              <img src="" alt="" class="activator"/>
            </div>
            <div class="card-image">
                <img  class="materialboxed" width="650" src="<%= product.imagePath %>">
                <a href="/add-to-cart/<%= product._id%>" class="btn-floating btn-small waves-effect waves-light btn tooltipped right cyan pulse" onclick="Materialize.toast('Added to cart', 3000, 'rounded')" data-delay="50" data-position="top" data-tooltip="add to cart"><i class="material-icons">add</i></a>
                <div class="gallery-action">
                    <a class="btn-floating btn-small waves-effect waves-light cyan pulse" ><i class="material-icons">favorite</i></a>
                </div>
            </div>
            <div class="card-action">
              <div class="card-content">
                <span class="card-title activator"><%= product.title %><i class="material-icons right">more_vert</i></span>
                <p class="price">$<%= product.price %></p>
              </div>
            </div>
            <div class="card-reveal">
              <span class="card-title activator"><%= product.title %><i class="material-icons right red pulse">close</i></span>
              <p> <%= product.description %> </p>
            </div>
          </div>
      </div>
  <%})%>



</div>
<div>

    <ul class="pagination">
        <li class="disabled"><a href="#!"><i class="material-icons">chevron_left</i></a></li>
        <li class="active"><a href="#!">1</a></li>
        <li class="waves-effect"><a href="#!">2</a></li>
        <li class="waves-effect"><a href="#!">3</a></li>
        <li class="waves-effect"><a href="#!">4</a></li>
        <li class="waves-effect"><a href="#!">5</a></li>
        <li class="waves-effect"><a href="#!"><i class="material-icons">chevron_right</i></a></li>
      </ul>

</div>


<script language="JavaScript">
   $('.carousel.carousel-slider').carousel({fullWidth: true});
   $(document).ready(function(){
    $('.materialboxed').materialbox();
  });
  $(document).ready(function(){
      $('.parallax').parallax();
    });

</script>
